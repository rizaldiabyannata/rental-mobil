PORT=3000
# Contoh konfigurasi environment
# Salin file ini menjadi .env lalu sesuaikan value sesuai kebutuhan

# --- Database (PostgreSQL) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rental_mobil
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Prisma connection string untuk Postgres
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"


# --- Authentication (JWT) ---
JWT_SECRET="your-super-secret-jwt-key-that-is-long-and-secure"
JWT_EXPIRES_IN=1d


# --- Email (SMTP untuk OTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<your_gmail_address>
SMTP_PASS=<your_gmail_app_password>
FROM_EMAIL=<from_address_optional_defaults_to_SMTP_USER>


# --- General ---
NEXT_PUBLIC_BASE_URL=http://localhost:3000


# --- MinIO Object Storage (Lokal Development) ---
# Jalankan MinIO via Docker. Endpoint adalah host machine Anda.
MINIO_ENDPOINT="127.0.0.1"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="rental-mobil" # Nama bucket untuk menyimpan semua file
MINIO_USE_SSL=false # Set ke false untuk development lokal (HTTP)